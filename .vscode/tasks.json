{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Projeto Biblioteca",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "${workspaceFolder}/projetoAED/main.c",
                "${workspaceFolder}/projetoAED/funcoes.c",   
                "-o",
                "${workspaceFolder}/projetoAED/output/main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
